# =============================================================================
# Program Configuration — {{ program_name }}
# =============================================================================
# Generated by AEROSPACEMODEL {{ aerospacemodel_version }}
# Created: {{ created_date }}
# Created by: {{ created_by }}
# =============================================================================

program:
  name: "{{ program_name }}"
  id: "{{ program_id }}"
  model_code: "{{ model_code }}"
  organization: "{{ organization }}"
  description: "{{ program_description }}"
  
  identifiers:
    cage_code: "{{ cage_code }}"
    country_code: "{{ country_code }}"
    language_code: "{{ language_code }}"
    
  standards:
    s1000d_issue: "{{ s1000d_issue }}"
    ata_spec: "iSpec 2200"
    
  created:
    date: "{{ created_date }}"
    by: "{{ created_by }}"
    aerospacemodel_version: "{{ aerospacemodel_version }}"

# Data partitioning
data:
  kdb:
    path: "KDB"
    description: "Knowledge Database — verified, baselined artifacts"
  idb:
    path: "IDB"
    description: "Instance Database — working, in-progress artifacts"
  output:
    path: "output"
    description: "Generated outputs"
  logs:
    path: "logs"
    description: "Audit and processing logs"

# Governance settings
governance:
  change_control:
    require_ecr: true
    require_ccb_approval: true
  baselines:
    auto_increment: false
    naming_pattern: "{{ model_code }}-{type}-{number:03d}"
  releases:
    require_gate_review: true
