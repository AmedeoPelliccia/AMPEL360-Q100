# =============================================================================
# CSDB Transformation Contract Template — {{ program_name }}
# =============================================================================
# Contract: KDB/IDB → CSDB (S1000D Common Source Database)
# Generated by AEROSPACEMODEL {{ aerospacemodel_version }}
# =============================================================================

contract:
  contract_id: "KITDM-CTR-LM-CSDB"
  name: "Lifecycle Model to CSDB Transformation"
  version: "1.0.0"
  program_id: "{{ program_id }}"
  
  source:
    type: "lifecycle_model"
    path: "KDB"
    format: "yaml"
    
  target:
    type: "csdb"
    path: "output/csdb"
    format: "s1000d_xml"
    s1000d_issue: "{{ s1000d_issue }}"
    
  transformation:
    engine: "aerospacemodel"
    rules:
      - name: "map_knu_to_dm"
        description: "Map KNU artifacts to S1000D data modules"
      - name: "generate_dmc"
        description: "Generate data module codes from ATA mapping"
      - name: "apply_brex"
        description: "Validate against BREX rules"
        
  identifiers:
    cage_code: "{{ cage_code }}"
    country_code: "{{ country_code }}"
    language_code: "{{ language_code }}"
