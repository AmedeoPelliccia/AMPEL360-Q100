contract:
  contract_id: "KITDM-CTR-LM-EXPORT"
  name: "Lifecycle Model to Export Transformation"
  version: "1.0.0"
  program_id: "{{ program_id }}"
  
  source:
    type: "lifecycle_model"
    path: "KDB"
    format: "yaml"
    
  target:
    type: "export"
    path: "output/export"
    formats:
      - "pdf"
      - "html"
      - "csv"
    
